<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yang.nebula.agent.business.file.space.mapper.FileSpaceMapper">

    <resultMap id="BaseResultMap" type="cn.yang.nebula.agent.business.file.space.dal.FileSpaceDo">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="create_user_id" jdbcType="VARCHAR" property="createUserId"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="update_user_id" jdbcType="VARCHAR" property="updateUserId"/>
    </resultMap>

    <resultMap id="FileSpaceResultMap" type="cn.yang.nebula.agent.business.file.space.entity.FileSpace">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="create_user_id" jdbcType="VARCHAR" property="createUserId"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="update_user_id" jdbcType="VARCHAR" property="updateUserId"/>
        <result column="file_count" jdbcType="INTEGER" property="fileCount"/>
        <result column="total_size" jdbcType="BIGINT" property="totalSize"/>
    </resultMap>

    <sql id="Base_Query">
        id, name, remark, create_time, create_user_id, update_time, update_user_id
    </sql>

    <insert id="insert" keyColumn="id" keyProperty="id"
            parameterType="cn.yang.nebula.agent.business.file.space.dal.FileSpaceDo" useGeneratedKeys="true">
        insert into file_space (id, name, remark, create_user_id, update_user_id)
        values (
        #{id,jdbcType=VARCHAR},
        #{name,jdbcType=VARCHAR},
        #{remark,jdbcType=VARCHAR},
        #{createUserId,jdbcType=VARCHAR},
        #{updateUserId,jdbcType=VARCHAR})
    </insert>

    <!-- 根据id修改数据(过滤为空数据) -->
    <update id="updateById" parameterType="cn.yang.nebula.agent.business.file.space.dal.FileSpaceDo">
        update file_space
        <set>
            <if test="name != null and name != ''">name = #{name, jdbcType=VARCHAR},</if>
            <if test="remark != null and remark != ''">remark = #{remark, jdbcType=VARCHAR},</if>
            <if test="updateUserId != null">update_user_id = #{updateUserId, jdbcType=VARCHAR},</if>
        </set>
        where id = #{id, jdbcType=VARCHAR}
    </update>

    <!-- 查询分页数量 -->
    <select id="selectPageCount" resultType="java.lang.Integer">
        select count(1) from file_space
        <where>
            create_user_id = #{query.createUserId}
            <if test="query.name != null and query.name != ''">
                and name like concat('%', #{query.name}, '%')
            </if>
        </where>
    </select>

    <!-- 查询分页数据 -->
    <select id="selectPageData" resultMap="FileSpaceResultMap">
        select
        fs.id, fs.name, fs.remark, fs.create_time, fs.create_user_id, fs.update_time, fs.update_user_id,
        IFNULL((select count(1) from file_library fl where fl.space_id = fs.id), 0) as file_count,
        IFNULL((select sum(size) from file_library fl where fl.space_id = fs.id), 0) as total_size
        from file_space fs
        <where>
            fs.create_user_id = #{query.createUserId}
            <if test="query.name != null and query.name != ''">
                and fs.name like concat('%', #{query.name}, '%')
            </if>
        </where>
        order by fs.create_time desc
    </select>

    <!-- 根据用户id查询所有空间 -->
    <select id="selectListByUserId" resultMap="BaseResultMap">
        select
        <include refid="Base_Query"/>
        from file_space
        where create_user_id = #{userId, jdbcType=VARCHAR}
        order by create_time desc
    </select>

    <!-- 根据id查询数据 -->
    <select id="selectById" resultMap="BaseResultMap">
        select
        <include refid="Base_Query"/>
        from file_space
        where id = #{id, jdbcType=VARCHAR}
    </select>

    <!-- 根据id删除数据 -->
    <delete id="deleteById">
        delete from file_space where id = #{id, jdbcType=VARCHAR}
    </delete>

    <!-- 统计用户空间数量 -->
    <select id="countByUserId" resultType="java.lang.Integer">
        select count(1) from file_space where create_user_id = #{userId, jdbcType=VARCHAR}
    </select>

    <!-- 根据id列表查询 -->
    <select id="selectByIds" resultType="cn.yang.nebula.agent.business.file.space.dal.FileSpaceDo">
        select <include refid="Base_Query"/>
        from file_space
        where id in
        <foreach item="item" collection="ids" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>
