<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yang.nebula.agent.business.user.mapper.UserRoleMapper">

    <!-- 根据用户ID列表查询用户角色关联 -->
    <select id="selectByUserIds" resultType="cn.yang.nebula.agent.business.user.dal.UserRoleDo">
        SELECT id, user_id, role_id
        FROM user_role
        WHERE user_id IN
        <foreach collection="userIds" item="userId" open="(" close=")" separator=",">
            #{userId}
        </foreach>
    </select>

    <!-- 根据用户ID查询用户角色关联 -->
    <select id="selectByUserId" resultType="cn.yang.nebula.agent.business.user.dal.UserRoleDo">
        SELECT id, user_id, role_id
        FROM user_role
        WHERE user_id = #{userId}
    </select>

    <!-- 根据用户ID删除用户角色关联 -->
    <delete id="deleteByUserId">
        DELETE FROM user_role
        WHERE user_id = #{userId}
    </delete>

    <!-- 新增用户角色关联 -->
    <insert id="insert">
        INSERT INTO user_role (id, user_id, role_id)
        VALUES (#{id}, #{userId}, #{roleId})
    </insert>

    <!-- 批量新增用户角色关联 -->
    <insert id="batchInsert">
        INSERT INTO user_role (id, user_id, role_id)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.id}, #{item.userId}, #{item.roleId})
        </foreach>
    </insert>

</mapper>
